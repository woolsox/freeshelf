<h1>All books:</h1>

<%= link_to "Add a book", new_book_path %>

<table>
 <tr>
  <th>Title</th>
  <th>Author</th>
  <th>Description</th>
  <th>Link</th>
 </tr>

 <% @books.each do |book| %>
 <tr>
  <td><%= book.title %></td>
  <td><%= book.author %></td>
  <td><%= book.description%></td>
  <td><%= book.link %></td>
  <td><%= link_to 'Show', book_path(book) %></td>
  <td><%= link_to 'Edit', edit_book_path(book) %></td>
  <td><%= link_to 'Destroy', book_path(book),
          method: :delete,
          data: { confirm: "Are you sure?" }%></td>
 </tr>
 <%end%>
</table>
